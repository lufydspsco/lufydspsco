  <script>
    // código JavaScript aqui
    let customers = [
      new CalculadoraDeCompras("Luan", 18),
      new CalculadoraDeCompras("Nicolas", 18),
      new CalculadoraDeCompras("Bryan", 18),
    ];

    function findCustomerByName(name) {
      for (let customer of customers) {
        if (customer.nome.toLowerCase() === name.toLowerCase()) {
          return customer;
        }
      }
      return null;
    }

    let customerNameInput = document.getElementById("customer-name");
    let customerAgeInput = document.getElementById("customer-age");
    let productList = document.getElementById("product-list");
    let totalElement = document.getElementById("total");
    let addProductBtn = document.getElementById("add-product-btn");
    let calculateTotalBtn = document.getElementById("calculate-total-btn");

    addProductBtn.addEventListener("click", () => {
      let customerName = customerNameInput.value;
      let customer = findCustomerByName(customerName);
      if (customer) {
        let produto = prompt("Digite o nome do produto:");
        let preco = parseFloat(prompt("Digite o preço do produto:"));
        let quantidade = parseInt(prompt("Digite a quantidade do produto:"));
        customer.addProduto(produto, preco, quantidade);
        let productListHtml = "";
        for (let produto in customer.listaDeCompras) {
          productListHtml += `<li>${produto}: R$ ${customer.listaDeCompras[produto].toFixed(2)}</li>`;
        }
        productList.innerHTML = productListHtml;
      } else {
        alert("Cliente não encontrado!");
      }
    });

